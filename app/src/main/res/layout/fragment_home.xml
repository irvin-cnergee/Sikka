<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_scrn_myapp"
        android:clickable="true"
        android:orientation="vertical" >

        <!-- header starts here -->

        <include layout="@layout/topbanner"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/top_Layout"/>
        <!-- header user name here -->

        <LinearLayout
            android:id="@+id/ll_marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/top_Layout">

            <com.cnergee.widgets.MyTextView
                android:id="@+id/tv_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/self_orange"
                customfontdemo:fontName="Neuton_Regular.ttf"/>

        </LinearLayout>

        <!-- middle content starts here -->

        <LinearLayout
            android:id="@+id/llmiddle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/banner"
            android:layout_below="@+id/ll_marquee"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:padding="2dp"
            android:weightSum="9">

            <RelativeLayout
                android:id="@+id/lluser_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgdvois"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_usertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="6dp"
                    android:text=""
                    android:textColor="@color/blue_background"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!-- middle content header starts here -->


            <!-- middle content header ends here -->


            <!-- middle content texts starts here -->

            <LinearLayout
