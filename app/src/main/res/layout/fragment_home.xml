                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:text="Validity"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtvalidity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@color/bg_ionhome"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:text="Expiry Date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtpkgexpiry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- new Days Remening after Expry -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@color/bg_ionhome"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:text="Days Remaining"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtdayremainig"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="4"
                        android:gravity="right"
                        android:textSize="@dimen/txt_Size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/relativerenewal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_style"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/img_pay_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/rs" />

                        <TextView
                            android:id="@+id/tv_pay_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:text="Pay Now"
                            android:textColor="@android:color/white"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="@dimen/pay_now_lable" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- middle content texts ends here -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/relativepaymenthistory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/nav_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/home_rl_padding_left"
                        android:paddingTop="@dimen/home_rl_padding_top"
                        android:paddingRight="@dimen/home_rl_padding_right"
                        android:paddingBottom="@dimen/home_rl_padding_bottom">

                        <ImageView
                            android:id="@+id/imgnew_renewal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_renewal"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/home_iv_padding_left"
                            android:paddingTop="@dimen/home_iv_padding_top"
                            android:paddingRight="@dimen/home_iv_padding_right"
                            android:paddingBottom="@dimen/home_iv_padding_bottom"
                            android:src="@drawable/img_renewal1" />

                        <TextView
                            android:id="@+id/tv_renewal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/home_tv_padding_left"
                            android:paddingTop="@dimen/home_tv_padding_top"
                            android:paddingRight="@dimen/home_tv_padding_right"
                            android:paddingBottom="@dimen/home_tv_padding_bottom"
                            android:singleLine="true"
                            android:text="Renewal History "
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativedatausage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/nav_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/home_rl_padding_left"
                        android:paddingTop="@dimen/home_rl_padding_top"
                        android:paddingRight="@dimen/home_rl_padding_right"
                        android:paddingBottom="@dimen/home_rl_padding_bottom"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/img_datausage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_datausage"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/home_iv_padding_left"
                            android:paddingTop="@dimen/home_iv_padding_top"
                            android:paddingRight="@dimen/home_iv_padding_right"
                            android:paddingBottom="@dimen/home_iv_padding_bottom"
                            android:src="@drawable/img_datausage" />

                        <TextView
                            android:id="@+id/tv_datausage"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/home_tv_padding_left"
                            android:paddingTop="@dimen/home_tv_padding_top"
                            android:paddingRight="@dimen/home_tv_padding_right"
                            android:paddingBottom="@dimen/home_tv_padding_bottom"
                            android:text="Data Usage "
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativepickuprequest"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/nav_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/home_rl_padding_left"
                        android:paddingTop="@dimen/home_rl_padding_top"
                        android:paddingRight="@dimen/home_rl_padding_right"
                        android:paddingBottom="@dimen/home_rl_padding_bottom">

                        <ImageView
                            android:id="@+id/img_pickup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_pickup_req"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/home_iv_padding_left"
                            android:paddingTop="@dimen/home_iv_padding_top"
                            android:paddingRight="@dimen/home_iv_padding_right"
                            android:paddingBottom="@dimen/home_iv_padding_bottom"
                            android:src="@drawable/pickup1" />

                        <TextView
                            android:id="@+id/tv_pickup_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/home_tv_padding_left"
                            android:paddingTop="@dimen/home_tv_padding_top"
                            android:paddingRight="@dimen/home_tv_padding_right"
                            android:paddingBottom="@dimen/home_tv_padding_bottom"
                            android:text="PickUp Request"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!--<RelativeLayout-->
                    <!--android:id="@+id/relativeTopup"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/nav_bg"-->
                    <!--android:gravity="center"-->
                    <!--android:orientation="vertical"-->
                    <!--android:paddingBottom="@dimen/home_rl_padding_bottom"-->
                    <!--android:paddingLeft="@dimen/home_rl_padding_left"-->
                    <!--android:paddingRight="@dimen/home_rl_padding_right"-->
