                    <!--android:paddingRight="@dimen/home_tv_padding_right"-->
                    <!--android:paddingTop="@dimen/home_tv_padding_top"-->
                    <!--android:text="Top up"-->
                    <!--android:textSize="10sp" />-->
                    <!--</RelativeLayout>-->

                    <RelativeLayout
                        android:id="@+id/relativeupgradepdackage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/nav_bg"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/home_rl_padding_left"
                        android:paddingTop="@dimen/home_rl_padding_top"
                        android:paddingRight="@dimen/home_rl_padding_right"
                        android:paddingBottom="@dimen/home_rl_padding_bottom">

                        <ImageView
                            android:id="@+id/img_explore_plans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_explore_plan"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/home_iv_padding_left"
                            android:paddingTop="@dimen/home_iv_padding_top"
                            android:paddingRight="@dimen/home_iv_padding_right"
                            android:paddingBottom="@dimen/home_iv_padding_bottom"
                            android:src="@drawable/create_plan" />

                        <TextView
                            android:id="@+id/tv_explore_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/home_tv_padding_left"
                            android:paddingTop="@dimen/home_tv_padding_top"
                            android:paddingRight="@dimen/home_tv_padding_right"
                            android:paddingBottom="@dimen/home_tv_padding_bottom"
                            android:text="Create Your Plan"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeservicerequest"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/nav_bg"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/home_rl_padding_left"
                        android:paddingTop="@dimen/home_rl_padding_top"
                        android:paddingRight="@dimen/home_rl_padding_right"
                        android:paddingBottom="@dimen/home_rl_padding_bottom"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/img_servicereq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/tv_service_req"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/home_iv_padding_left"
                            android:paddingTop="@dimen/home_iv_padding_top"
                            android:paddingRight="@dimen/home_iv_padding_right"
                            android:paddingBottom="@dimen/home_iv_padding_bottom"
                            android:src="@drawable/img_servicerequest" />

                        <TextView
                            android:id="@+id/tv_service_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
