                    <!--android:weightSum="5" >-->

                    <!--<ImageView-->
                    <!--android:id="@+id/img_special"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_above="@+id/tv_special_offer"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:paddingBottom="@dimen/home_iv_padding_bottom"-->
                    <!--android:paddingLeft="@dimen/home_iv_padding_left"-->
                    <!--android:paddingRight="@dimen/home_iv_padding_right"-->
                    <!--android:paddingTop="@dimen/home_iv_padding_top"-->
                    <!--android:src="@drawable/top_up" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/tv_special_offer"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingBottom="@dimen/home_tv_padding_bottom"-->
